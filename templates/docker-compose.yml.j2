---

version: '3.5'

{% if nginx.container.network|default(False) %}
networks:
  {{ nginx.container.network.name }}:
    external: true
{% endif %}

services:
  server:
    build: ./
    image: {{ nginx.container.image }}
    container_name: {{ nginx.container.name }}
    hostname: {{ ansible_hostname }}
    dns: {{ nginx.container.dns }}
{% if nginx.container.syslog.enabled %}
    logging:
      driver: syslog
      options:
        syslog-address: "{{ nginx.container.syslog.host }}"
        tag: {{ nginx.container.syslog.tag }}
{% endif %}
{% if nginx.container.network|default(False) %}
    networks:
      - {{ nginx.container.network.name }}
{% endif %}
    ports:
      - target: 80
        published: 80
        mode: host
      - target: 443
        published: 443
        mode: host
    restart: {{ nginx.container.restart }}
    volumes:
      - ./certs:/etc/nginx/certs
      - ./consul-templates:/etc/consul-templates
      - ./conf.d:/etc/nginx/conf.d
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./service:/etc/service
{% if nginx.letsencrypt.enabled %}
      - /etc/letsencrypt:/etc/letsencrypt
{% endif %}
      - /var/www:/var/www
      - {{ nginx.logs_dir }}:/var/log/nginx

{% if nginx.exporter.enabled %}
  exporter:
    container_name: {{ nginx.exporter.container.name }}
    image: {{ nginx.exporter.container.image }}
    dns: {{ nginx.exporter.container.dns }}
{% if nginx.exporter.container.syslog.enabled %}
    logging:
      driver: syslog
      options:
        syslog-address: "{{ nginx.exporter.container.syslog.host }}"
        tag: {{ nginx.exporter.container.syslog.tag }}
{% endif %}
{% if nginx.container.network|default(False) %}
    networks:
      - {{ nginx.container.network.name }}
{% endif %}
    ports:
      - "{{ nginx.exporter.host }}:{{ nginx.exporter.port }}:9187"
    restart: {{ nginx.exporter.container.restart }}
    volumes:
      - {{ nginx.logs_dir }}:/var/log/nginx
{% endif %}
